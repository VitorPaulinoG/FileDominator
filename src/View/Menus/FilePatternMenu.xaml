<Window x:Class="View.Menus.FilePatternMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Menus"
        mc:Ignorable="d"
        Title="FilePatternMenu" 
        MinHeight="150" MaxHeight="150" 
        MinWidth="400" MaxWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Padrão de Seleção"/>
            <DockPanel>
                <TextBox Grid.Row="1" Width="300" Height="25" 
                         DockPanel.Dock="Left"/>
                <Button Name="confirmButton" Click="ConfirmButton_Click"
                        Margin="5 0 0 0" Content="Confirmar"
                        DockPanel.Dock="Left"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
